pipeline {
    agent any

    // Global tools to be used
    tools {
        maven 'maven3.6' 
        jdk 'jdk8' 
    }

    stages {
        stage('Pull App') {
          steps {
            git branch: 'master', url: "https://github.com/jfrog/project-examples.git"
          }
        }
               
        stage ('Artifactory configuration') {
            steps {
            
                // Set up the Artifactory server
                rtServer (
                    id: 'ARTIFACTORY_SERVER',
                    url: 'http://artifactory-oss-test-project.apps.bnpdev.com/artifactory',
                    username: 'admin',
                    password: 'password'
                )
            }
        }

        stage ('Build & Upload Artifact') {
            steps {
                
                // run Maven Build and upload the built artifact to Artifactory
                rtMavenRun (
                    pom: 'maven-example/multi2/pom.xml',
                    goals: 'clean install',
                )
            }
        }

        stage ('Publish build info') {
            steps {
                rtPublishBuildInfo (        
                    serverId: "ARTIFACTORY_SERVER"
                )
            }
        }
    }
}
